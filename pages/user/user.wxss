/* pages/user/user.wxss */
.user-box{
    width: 100%;
    height: 450rpx;
    background-color: rgb(167, 180, 190);
    display: flex;
    justify-content: center;
    align-items: center;
}

.user-info{
    width: 150rpx;
    height: 250rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.user-info > image {
    border-radius: 50%;
}

.message-button{
    margin-top: 50rpx;
}

.message-button{
    display: flex;
    justify-content: center;  
}

.message-button button{
    margin-top: 30rpx;
}